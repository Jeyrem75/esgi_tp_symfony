{% extends 'base.html.twig' %}

{% block title %}Détails de l'Ingrédient{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Détails de l'Ingrédient</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">Informations sur l'Ingrédient</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ ingredient.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ ingredient.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Quantité</th>
                        <td>{{ ingredient.quantity }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Unité</th>
                        <td>{{ ingredient.unit }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_ingredient_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        {{ include('ingredient/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
