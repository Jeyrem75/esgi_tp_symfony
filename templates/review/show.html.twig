{% extends 'base.html.twig' %}

{% block title %}Détails de l'Avis{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Détails de l'Avis</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">Informations sur l'Avis</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ review.id }}</td>
                    </tr>
                    <tr>
                        <th>Note</th>
                        <td>{{ review.rating }}</td>
                    </tr>
                    <tr>
                        <th>Commentaire</th>
                        <td>{{ review.comment }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_review_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_review_edit', {'id': review.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <div>
            {{ include('review/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
