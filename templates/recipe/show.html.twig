{% extends 'base.html.twig' %}

{% block title %}Détails de la Recette{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Détails de la Recette</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">Informations sur la Recette</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ recipe.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Titre</th>
                        <td>{{ recipe.title }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ recipe.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Image</th>
                        <td>
                            <img src="{{ recipe.image }}" alt="Image de {{ recipe.title }}" class="img-fluid rounded">
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Durée</th>
                        <td>{{ recipe.duration }} minutes</td>
                    </tr>
                    <tr>
                        <th scope="row">Difficulté</th>
                        <td>{{ recipe.difficulty }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_recipe_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        {{ include('recipe/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
