{% extends 'base.html.twig' %}

{% block title %}Liste des Recettes{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des Recettes</h1>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>Durée</th>
                <th>Difficulté</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.description }}</td>
                <td>
                    <img src="{{ recipe.image }}" alt="Image de {{ recipe.title }}" class="img-thumbnail" width="100">
                </td>
                <td>{{ recipe.duration }} minutes</td>
                <td>{{ recipe.difficulty }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">Aucune recette trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_recipe_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter une nouvelle recette
        </a>
        <a href="{{ path('app_admin') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard administrateur
        </a>
    </div>
</div>
{% endblock %}
