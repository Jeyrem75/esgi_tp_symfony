{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Gestion des Utilisateurs</h1>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-primary">{{ role }}</span>
                    {% else %}
                        <span class="badge bg-secondary">N/A</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_user_new') }}" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Créer un nouvel utilisateur
        </a>
        <a href="{{ path('app_admin') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard administrateur
        </a>
    </div>
</div>
{% endblock %}
