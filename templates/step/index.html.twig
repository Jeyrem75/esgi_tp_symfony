{% extends 'base.html.twig' %}

{% block title %}Liste des Étapes{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des Étapes</h1>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Numéro</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for step in steps %}
            <tr>
                <td>{{ step.id }}</td>
                <td>{{ step.number }}</td>
                <td>{{ step.description }}</td>
                <td>
                    <a href="{{ path('app_step_show', {'id': step.id}) }}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_step_edit', {'id': step.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune étape trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_step_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Créer une nouvelle étape
        </a>
        <a href="{{ path('app_admin') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard administrateur
        </a>
    </div>
</div>
{% endblock %}
